header#header
  - var homeUrl = `/${I18N.current}`;
  .sidebar
      .container-fluid
        span.float-right.chiudi X


      ul.menu-list
        li.animation-menu
          a(href="/" ) Home
        li.animation-menu
         a(href="/"+menu.lang+"/storia") Azienda

        li.wrapper-categoria
          div.categorie.pb-3
            h4.text-extra-bold.mt-2.animation-menu I nostri Prodotti
            ul.lista-categorie
                li.animation-menu
                   each element in categ
                      a(href='/'+element.lang+'/'+'categorie/'+element.uid) #{element.uid}


        li.animation-menu
          a(href="/"+menu.lang+"/servizi") Busnees
        li.animation-menu
          a(href="#") Contatti


      button.sidebarBtn(type='button')
        span


  //
    .logo
      img(src=menu.data.logo_brand.url width='100px')


  //
    nav
      ul
        if menu
          each linkItem in menu.data.menuLinks
            li
              a(href=Link.url(linkItem.link, ctx.linkResolver))
                != linkItem.label

          li.lang
            include ./language-selector
  .logo-container
         img(src=menu.data.logo_brand.url width='100px')
