header#header
  - var homeUrl = `/${I18N.current}`;
  .sidebar
      .container-fluid
        span.float-right.chiudi X


      ul.menu-list
        li.animation-menu
          a(href=Link.url(menu.data.linkhome, ctx.linkResolver))
            != RichText.asText(menu.data.home)
        li.animation-menu
         a(href=Link.url(menu.data.linkazienda, ctx.linkResolver))
            != RichText.asText(menu.data.azienda)

        li.wrapper-categoria
          div.categorie.pb-3
            h4.text-extra-bold.mt-2.animation-menu
              != RichText.asText(menu.data.i_nostri_prodott)
            ul.lista-categorie
                li.animation-menu
                   each element in categ
                      a(href='/'+element.lang+'/'+'categorie/'+element.uid) #{element.uid}


        li.animation-menu
          a(href=Link.url(menu.data.linkcontatti, ctx.linkResolver))
            != RichText.asText(menu.data.contatti)
        li.animation-menu
           a(href=Link.url(menu.data.linkservizi, ctx.linkResolver))
            != RichText.asText(menu.data.servizi)


      button.sidebarBtn(type='button')
        span


  //
    .logo
      img(src=menu.data.logo_brand.url width='100px')


  //
    nav
      ul
        if menu
          each linkItem in menu.data.menuLinks
            li
              a(href=Link.url(linkItem.link, ctx.linkResolver))
                != linkItem.label

          li.lang
            include ./language-selector
  .logo-container
         img(src=menu.data.logo_brand.url width='100px')
